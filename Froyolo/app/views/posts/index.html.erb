<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Xcoord</th>
      <th>Ycoord</th>
      <th>Altitude</th>
      <th>Horizontalaccuracy</th>
      <th>Verticalaccuracy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.xcoord %></td>
        <td><%= post.ycoord %></td>
        <td><%= post.altitude %></td>
        <td><%= post.horizontalaccuracy %></td>
        <td><%= post.verticalaccuracy %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %><br>
<%= link_to 'Filter', filter_path %>
