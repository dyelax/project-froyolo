<p id="notice"><%= notice %></p>

<%= image_tag @post.image.url %>

<p>
  <strong>Xcoord:</strong>
  <%= @post.xcoord %>
</p>

<p>
  <strong>Ycoord:</strong>
  <%= @post.ycoord %>
</p>

<p>
  <strong>Altitude:</strong>
  <%= @post.altitude %>
</p>



<p>
  <strong>Score:</strong>
  <%= @post.score %>
</p>

<%= form_tag(increment_path(format: "json"), method: "post", id: "search-form") do %>
<%= label_tag "Post ID" %>
<%= text_field_tag :post_id, @post.id, placeholder: @post.id %><br>
<%= submit_tag "Increment", name: nil %>
<% end %>

<%= form_tag(decrement_path(format: "json"), method: "post", id: "search-form") do %>
<%= label_tag "Post ID" %>
<%= text_field_tag :post_id, @post.id, placeholder: @post.id %><br>
<%= submit_tag "Decrement", name: nil %>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
